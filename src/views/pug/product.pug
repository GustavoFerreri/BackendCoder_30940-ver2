doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
    body 
        include ./partials/navigation.pug
        main(class="container p-5")
        div(class="container")
            div(class="card" style="width: 18rem; margin-top: 60px;")
                div(class="card-body")
                    form(action="product" method="POST")
                        div(class="form-group")
                            input(type="text" name="title" placeholder="Coloque el Titulo" class="form-control" style="padding: 20px; margin-top: 5px;")
                            input(type="text" name="price" placeholder="Coloque el Precio" class="form-control" style="padding: 20px; margin-top: 5px;")
                            input(type="text" name="img" placeholder="Coloque la ruta de la imagen" class="form-control" style="padding: 20px; margin-top: 5px;")
                            input(type="text" name="description" placeholder="Agregue una breve descipcion" class="form-control" style="padding: 20px; margin-top: 5px;")
                            button(class="btn btn-primary" style="padding: 20px; margin-top: 15px;") Cargar nuevo producto
